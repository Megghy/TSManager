<UserControl x:Class="TSManager.GUI.Control.PerformanceBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TSManager.GUI.Control"
             xmlns:vm="clr-namespace:TSManager.GUI.ViewModel"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch">
        <hc:UniformSpacingPanel Orientation="Vertical">
            <Label Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type local:PerformanceBar}},Path=Title}" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"/>
            <hc:Divider />
            <ProgressBar Style="{StaticResource ProgressBarInfo}"
                         Value="{Binding Percent}" 
                         VerticalAlignment="Center"/>
        </hc:UniformSpacingPanel>
    </Grid>
</UserControl>
